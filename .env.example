# Environment variables
# Copy to .env and change passwords before deployment

# Application
APP_NAME=whoisalice
APP_VERSION=0.1.0
APP_HOST=0.0.0.0
APP_PORT=8000

# Database
POSTGRES_HOST=database
POSTGRES_PORT=5432
POSTGRES_DB=whoisalice
POSTGRES_USER=whoisalice
POSTGRES_PASSWORD=changeme_strong_password

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=changeme_strong_password

# Logging
LOG_LEVEL=INFO

# JWT Authentication
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token-from-botfather

# File Storage
AUDIO_UPLOAD_DIR=volumes/audio
AUDIO_RESULTS_DIR=volumes/results
MAX_AUDIO_SIZE_MB=10
